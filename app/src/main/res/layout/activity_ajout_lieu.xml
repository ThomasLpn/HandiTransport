<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="miagesorbonne.Handitransport.AjoutLieu">

    <TextView android:text="@string/ajouterUnLieu" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titreAjoutLieu" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listeCategorie"
        android:layout_below="@+id/titreAjoutLieu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomLieu"
        android:layout_below="@+id/listeCategorie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/ajouterLieuLieu" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adresseLieu"
        android:layout_below="@+id/nomLieu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/ajouterLieuAdresse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cpLieu"
        android:layout_below="@+id/adresseLieu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/ajouterLieuCodePostale" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/villeLieu"
        android:layout_below="@+id/cpLieu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/ajouterLieuVille" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteLieu"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numStars="5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/commentaireLieu"
        android:layout_below="@+id/noteLieu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/listeCategorie"
        android:text="@string/ajouterLieuCommentaire"
        android:layout_above="@+id/validerAjoutLieu"
        android:gravity="top"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajouterLieuValider"
        android:id="@+id/validerAjoutLieu"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/commentaireLieu"
        android:layout_alignEnd="@+id/commentaireLieu" />

</RelativeLayout>
